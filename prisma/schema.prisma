generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  date        DateTime @default(now())
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      String
  excerpt     String?
  content     String
  category    String
  status      String   @default("draft")
  image       String?
  tags        String[] @default([])
  
  @@index([slug])
  @@index([status])
  @@index([category])
}
